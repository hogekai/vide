{
  "name": "vide",
  "version": "0.6.0",
  "description": "Zero-config, web-standard-first lightweight video player library",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./vast": {
      "types": "./dist/vast/index.d.ts",
      "import": "./dist/vast/index.mjs"
    },
    "./vmap": {
      "types": "./dist/vmap/index.d.ts",
      "import": "./dist/vmap/index.mjs"
    },
    "./omid": {
      "types": "./dist/omid/index.d.ts",
      "import": "./dist/omid/index.mjs"
    },
    "./simid": {
      "types": "./dist/simid/index.d.ts",
      "import": "./dist/simid/index.mjs"
    },
    "./hls": {
      "types": "./dist/hls/index.d.ts",
      "import": "./dist/hls/index.mjs"
    },
    "./dash": {
      "types": "./dist/dash/index.d.ts",
      "import": "./dist/dash/index.mjs"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.mjs"
    },
    "./ui/theme.css": "./dist/ui/theme.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "dashjs": "^4.7.0",
    "hls.js": "^1.6.15",
    "jsdom": "^25.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "dashjs": "^4.0.0",
    "hls.js": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "dashjs": {
      "optional": true
    },
    "hls.js": {
      "optional": true
    }
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}
